<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name" string="Doctor Name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="doc_ic" required="0"/>
                            <field name="doc_DOB" string="Date of Birth"/>
                            <field name="age"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="doc_mobile" placeholder="XXX-XXXXXXX" readonly="0" widget="phone"/>
                            <field name="doc_email" widget="email"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="doc_address"/>
                            <field name="doc_address_state"/>
                        </group>
                        <group>
                            <field name="doc_country"/>
                        </group>
                    </group>

                    <group>
                        <notebook>
                            <page string="Extra Information">
                                <group></group>
                                <group>
                                    <group>
                                        <field name="doc_type"/>
                                        <field name="department_id"/>
                                    </group>
                                    <group>
                                        <field name="doc_position"/>
                                        <field name="specialist_type"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="doc_qualification"/>
                                    </group>
                                    <group>
                                        <field name="language_id" widget="many2many_tags"
                                               options="{'color_field': 'color', 'no_create_edit': True}"
                                               placeholder="Tags..."/>
                                        <field name="active" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Appointment Records">
                                <field name="appointment_id"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Doctor Name"
                       filter_domain="['|', ('name','ilike',self), ('ref','ilike',self)]"/>
                <field name="doc_position" string="Doctor Position"/>
                <field name="ref"/>
                <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter name="filter_active" string="Archived" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by':'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="res_model">hospital.doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Doctor!
            </p>
        </field>
    </record>

    <menuitem id="menu_doctor"
              name="Doctor"
              action="action_hospital_doctor"
              parent="menu_staff_master"
              sequence="0"/>


</odoo>