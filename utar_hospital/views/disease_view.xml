<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_disease_tree" model="ir.ui.view">
        <field name="name">hospital.disease.tree</field>
        <field name="model">hospital.disease</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="color" widget="color_picker" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_disease_form" model="ir.ui.view">
        <field name="name">hospital.disease.form</field>
        <field name="model">hospital.disease</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                     <div class="oe_title">
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="disease_cause"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="disease_riskfactor"/>
                        </group>
                        <group>
                            <field name="disease_complication"/>
                        </group>
                    </group>
                    <group>
                        <group>
                             <field name="disease_overview" class="oe-bordered-editor field_description"
                                       placeholder="Overview of Disease..."/>
                        </group>
                        <group>
                            <field name="disease_prevention" class="oe-bordered-editor field_description"
                                       placeholder="Prevention of Disease..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_hospital_disease" model="ir.actions.act_window">
        <field name="name">Disease</field>
        <field name="res_model">hospital.disease</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record the First Disease!
            </p>
        </field>
    </record>


    <menuitem id="menu_disease_master"
              name="Disease"
              action="action_hospital_disease"
              parent="menu_hospital_root"
              sequence="5"/>

</odoo>