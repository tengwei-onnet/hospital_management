<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_medical_record_tree" model="ir.ui.view">
        <field name="name">hospital.medical_record.tree</field>
        <field name="model">hospital.medical_record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="patient_id"/>
                <field name="rep_type"/>
                <field name="doctor_id"/>
                <field name="rep_date"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_medical_record_form" model="ir.ui.view">
        <field name="name">hospital.medical_record.form</field>
        <field name="model">hospital.medical_record</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="action_send_whatsapp" string="Notify Doctor" class="oe_highlight"
                            icon="fa-whatsapp"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="disease_id" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create_edit': True}"
                                   placeholder="Diseases..."/>
                        </group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="doctor_phone_no" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="rep_type"/>
                            <field name="rep_date"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>

                    <group>
                        <notebook>
                            <page string="Treatment">
                                <group>
                                    <field name="medicine_id" widget="many2many_tags"
                                           options="{'color_field': 'color', 'no_create_edit': True}"
                                           placeholder="Medicines..."/>
                                </group>
                                <field name="rep_description" class="oe-bordered-editor field_description"
                                       placeholder="Description of Treatment..."/>
                            </page>
                            <page string="Care">
                                <group>
                                    <field name="ward_id"/>
                                    <field name="ward_type"/>
                                    <field name="meal_id"/>
                                </group>
                                <group>
                                    <field name="remark" class="oe-bordered-editor field_description"
                                           placeholder="Description of Treatment..."/>
                                </group>
                            </page>
                            <page string="Inpatient Details" attrs="{'invisible': [('rep_type', '!=', 'inpatient')]}">
                                <group>
                                    <group>
                                        <field name="rep_checkinDate"/>
                                        <field name="rep_checkoutDate"/>
                                    </group>
                                    <group>
                                        <field name="rep_anticipated_discharge_date"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_medical_record_search" model="ir.ui.view">
        <field name="name">hospital.medical_record.search</field>
        <field name="model">hospital.medical_record</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref" string="Medical Record ID"/>
                <field name="patient_id" string="Patient ID"/>
                <field name="doctor_id" string="Doctor ID"/>
                <field name="rep_type" string="Report Type"/>

                <filter name="filter_active" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name='filter_today_discharge_date' string="Today (Discharge Date)"
                        domain="[('rep_anticipated_discharge_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('rep_anticipated_discharge_date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter name='filter_today_checkout_date' string="Today (Checkout Date)"
                        domain="[('rep_checkoutDate', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('rep_checkoutDate', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <separator/>
                <filter name='filter_tomorrow_discharge_date' string="Tomorrow (Discharge Date)"
                        domain="[('rep_anticipated_discharge_date','&gt;=', ((context_today()+datetime.timedelta(days=0)).strftime('%Y-%m-%d 23:59:59'))),
                        ('rep_anticipated_discharge_date','&lt;=', ((context_today()+datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:59:59')))]"/>
                <filter name='filter_tomorrow_checkout_date' string="Tomorrow (Checkout Date)"
                        domain="[('rep_checkoutDate','&gt;=', ((context_today()+datetime.timedelta(days=0)).strftime('%Y-%m-%d 23:59:59'))),
                        ('rep_checkoutDate','&lt;=', ((context_today()+datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:59:59')))]"/>
            </search>
        </field>
    </record>


    <record id="action_hospital_medical_record" model="ir.actions.act_window">
        <field name="name">Medical Record</field>
        <field name="res_model">hospital.medical_record</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Insert your first Report!
            </p>
        </field>
    </record>

    <menuitem id="menu_medical_report"
              name="Medical Report"
              action="action_hospital_medical_record"
              parent="menu_medical_report_master"
              sequence="0"/>

</odoo>