<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name" string="Patient Name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="schedule_appointment"
                            string="Schedule Appointment" class="oe_highlight"
                            icon="fa-plus"/>
                    <button type="object" name="create_medical_record"
                            string="Create Medical Record" class="oe_highlight"
                            icon="fa-stethoscope"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="pat_ic" required="1"/>
                            <field name="pat_DOB" string="Date of Birth"/>
                            <field name="age"/>

                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="pat_mobile" placeholder="XXX-XXXXXXX" readonly="0" widget="phone"/>
                            <field name="pat_email" widget="email"/>
                            <field name="active" invisible="1"/>
                            <!--                            <field name="is_birthday" invisible="1"/>-->
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="pat_address"/>
                            <field name="pat_address_state"/>
                        </group>
                        <group>
                            <field name="pat_country"/>
                        </group>
                    </group>

                    <group>
                        <notebook>
                            <page string="Extra Information">
                                <div class="oe_title">
                                    <h3>Extra Information</h3>
                                </div>
                                <group></group>
                                <group>
                                    <group>
                                        <field name="pat_height"/>
                                        <field name="pat_weight"/>
                                    </group>
                                    <group>
                                        <field name="bmi_value"/>
                                        <field name="pat_bloodType"/>
                                    </group>
                                    <field name="bmi_result" attrs="{'invisible': [('bmi_value', '==', 0)]}"/>
                                </group>
                                <group></group>
                                <group>
                                    <field name="favourite_ward_type"/>
                                </group>
                                <group></group>
                                <div class="oe_title">
                                    <h3>Allergic Description</h3>
                                </div>
                                <group></group>
                                <field name="pat_allergic" class="oe-bordered-editor field_description"
                                       placeholder="Description of Allergic..."/>

                            </page>
                            <page string="Insurance">
                                <div class="oe_title">
                                    <h3>Insurance Document</h3>
                                </div>
                                <group></group>
                                <group>
                                    <field name="pat_insurance_name"/>
                                </group>
                                <group>
                                    <field name="insurance_attachment_id" widget="many2many_binary" class="oe_inline"/>
                                </group>
                            </page>

                            <page string="Appointment Records">
                                <field name="appointment_id"/>
                            </page>
                            <page string="Medical Records">
                                <field name="medical_record_ids"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_onnet_borrow_graph" model="ir.ui.view">
        <field name="name">hospital.patient.graph</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <graph string="Patient Demographics" type="line" stacked="False">
                <field name="bmi_value" type="measure"/>
                <field name="gender"/>
            </graph>
        </field>
    </record>

    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Patient Name"
                       filter_domain="['|', ('name','ilike',self), ('ref','ilike',self)]"/>
                <field name="ref"/>
                <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter name="filter_kids" string="Kids" domain="[('age', '&lt;=', '14')]"/>
                <separator/>
                <filter name="filter_active" string="Archived" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by':'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hospital.patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>

    <menuitem id="menu_patient"
              name="Patient"
              action="action_hospital_patient"
              parent="menu_patient_master"
              sequence="0"/>


</odoo>